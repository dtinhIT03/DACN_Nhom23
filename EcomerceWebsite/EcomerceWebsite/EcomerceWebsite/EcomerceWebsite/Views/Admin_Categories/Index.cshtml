@model IEnumerable<EcomerceWebsite.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2 style="font-weight:700; margin-bottom:20px;">Loại sản phẩm</h2>
<style>
    .excelLink {
        padding: 0 5px;
        transition: 0.3s;
        border-radius: 5px;
        font-weight: 600;
        display: block;
    }

        .excelLink:hover {
            background-color: lightgreen;
            color: white !important;
            font-size: 18px;
            height: 30px;
        }

  
    

    .button > a {
        color: white;

    }

    .button:hover a {
        color: red;
    }
</style>
<link rel="stylesheet" href="../../css/style.css" type="text/css">
<div style="display:flex;">
    <p>
        @Html.ActionLink("Thêm mới", "Create")
    </p>
    <div>

        <a class="excelLink" href="@Url.Action("ExportToExcel", "Home", new { code = "Category" })" style="color: #21b61f; text-decoration:none; margin-left: 20px;">Xuất file excel <i class="fa fa-file-excel" style="margin-left: 5px;"></i></a>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            Tên
        </th>
        <th>
            Ngày tạo
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ngayTao)
            </td>
            <td style="text-align:right">


                <div class="button" style="border: 1px solid green; border-radius: 3px; background: blue; width: 90px; text-align: center; margin-bottom: 6px ">
                    @Html.ActionLink("Edit", "Edit", new { id = item.category_id })
                </div>

                <div class="button" style="border: 1px solid green; border-radius: 3px; background: blue; width: 90px; text-align: center; margin-bottom: 6px ">
                    @Html.ActionLink("Details", "Details", new { id = item.category_id })

                </div>

                <div class="button" style="border: 1px solid green; border-radius: 3px; background: blue; width: 90px; text-align: center; margin-bottom: 6px ">
                    @Html.ActionLink("Delete", "Delete", new { id = item.category_id })

                </div>
                

            </td>
        </tr>
    }

</table>

<div class="product__pagination">
    @for (int i = 1; i <= ViewBag.TotalPages; i++)
    {
        <a class="@(ViewBag.CurrentPage == i ? "active" : "")" href="/Admin_Categories/Index/?page=@i">@i</a>
    }
</div>
